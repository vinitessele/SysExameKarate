unit UGrupoTecnica;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, UModelo, Vcl.ComCtrls, Vcl.DBCtrls,
  Vcl.ExtCtrls, Vcl.StdCtrls, Data.DB, Vcl.Mask, Vcl.Buttons, Vcl.Grids,
  Vcl.DBGrids;

type
  TFGrupoxTecnica = class(TFModelo)
    DBComboBoxGrupo: TDBComboBox;
    DataSourceGrupo: TDataSource;
    btnExcluir: TSpeedButton;
    btnInserir: TSpeedButton;
    EditTecnica: TEdit;
    Label1: TLabel;
    DBGrid1: TDBGrid;
    DataSourcetecnica: TDataSource;
    DataSourceGrupoTecnica: TDataSource;
    DBGrid2: TDBGrid;
    procedure btnInserirClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure EditTecnicaChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FGrupoxTecnica: TFGrupoxTecnica;

implementation

{$R *.dfm}

uses UDM;

procedure TFGrupoxTecnica.btnInserirClick(Sender: TObject);
begin
  inherited;
  dm.FDQGrupoTecnica.Active := True;
  dm.FDQGrupoTecnica.Append;
  dm.FDQGrupoTecnicatecnica_id.AsInteger :=
    dm.FDQListTecnicaDescricaotecnica_id.AsInteger;
  dm.FDQGrupoTecnicagrupo_id.AsInteger := dm.FDQGrupogrupo_id.AsInteger;
  dm.FDQGrupoTecnica.Post;
  dm.FDConnection1.CommitRetaining;

end;

procedure TFGrupoxTecnica.EditTecnicaChange(Sender: TObject);
begin
  inherited;
  dm.FDQListTecnicaDescricao.Close;
  dm.FDQListTecnicaDescricao.ParamByName('tecnica').AsString :=
    '%' + EditTecnica.Text + '%';
  dm.FDQListTecnicaDescricao.Open();
end;

procedure TFGrupoxTecnica.FormShow(Sender: TObject);
begin
  inherited;
  dm.FDQGrupo.Close;
  dm.FDQGrupo.Open();
  dm.FDQTecnica.Close;
  dm.FDQTecnica.Open();
end;

end.
